---
// Highlights Section
// ------------
// Description: A section with a multiple text and image rows.

// Components
// - UI
import TextImage from '../basic/TextImage.astro'

// Content
import highlight01 from '../../../assets/highlights/highlight-01.png'
import highlight01mobile from '../../../assets/highlights/highlight-01.png'
import highlight02 from '../../../assets/highlights/highlight-02.png'
import highlight02mobile from '../../../assets/highlights/highlight-02.png'
import highlight03 from '../../../assets/highlights/highlight-03.png'
import highlight03mobile from '../../../assets/highlights/highlight-03.png'
import highlight04 from '../../../assets/highlights/highlight-04.png'
import highlight04mobile from '../../../assets/highlights/highlight-04.png'

type HighlightBlock = {
	title: string
	text: string
	image: any
	mobileImage?: any
	imageWidth: number
	imageHeight: number
	imagePosition: 'left' | 'right'
}
const highlightBlocks: HighlightBlock[] = [
	{
		title: 'Conversational search',
		text: 'Search for photos using natural language',
		image: highlight01,
		imageWidth: highlight01.width,
		imageHeight: highlight01.height,
		mobileImage: highlight01mobile,
		imagePosition: 'right'
	},
	{
		title: 'Organize and cull',
		text: "Rate, label, tag your photos and use Viroop's filtering capabilities to quickly cull photos",
		image: highlight02,
		mobileImage: highlight02mobile,
		imageWidth: highlight02.width,
		imageHeight: highlight02.height,
		imagePosition: 'left'
	},
	{
		title: 'Advanced filtering',
		text: 'Viroop allows you to filter your data by any attribute of the photograph or from attributes you apply to a photo',
		image: highlight03,
		mobileImage: highlight03mobile,
		imageWidth: highlight03.width,
		imageHeight: highlight03.height,
		imagePosition: 'right'
	},
	{
		title: 'Fine grained export',
		text: 'You can export your photos in various formats, sizes and quality',
		image: highlight04,
		mobileImage: highlight04mobile,
		imageWidth: highlight04.width,
		imageHeight: highlight04.height,
		imagePosition: 'left'
	}
]
---

{
	highlightBlocks.map((highlight, key) => (
		<TextImage
			id={`highlight-${key}`}
			title={highlight.title}
			text={highlight.text}
			image={highlight.image}
			imageWidth={highlight.imageWidth}
			imageHeight={highlight.imageHeight}
			mobileImage={highlight.mobileImage}
			imagePosition={highlight.imagePosition}
			classes={key === 0 ? '!pb-0' : key === highlightBlocks.length - 1 ? '!pt-0' : '!py-0'}
		/>
	))
}
