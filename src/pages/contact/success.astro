---
// Components
// - Layout
import Layout from '../../layouts/Layout.astro'
// - UI
import CTA from '../../components/blocks/CTA/BasicDark.astro'

// Content
// - SEO
const SEO = {
	title: 'Viroop | Get in Touch with Us',
	description:
		'Have questions or need assistance? Contact Viroop today for support, inquiries, or feedback. Our team is here to help you make the most of your Viroop experience.'
}
// - Page Header
const header = {
	title: 'Get Answers to Your <strong>Viroop</strong> Questions.',
	text: "Whether you have a question, need support, or just want to share your feedback, we're all ears. Reach out to us and we'll get back to you as soon as possible."
}
---

<Layout title={SEO.title} description={SEO.description}>
	<div class="my-8 flex flex-col items-center">
		<h2>Thank you!</h2>
		<p>Your message has been sent successfully. We'll get back to you soon.</p>
	</div>
	<CTA />
</Layout>
