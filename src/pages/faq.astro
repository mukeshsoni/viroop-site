---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import FAQ from '../components/blocks/FAQ/FaqSticky.astro'
import TextImage from '../components/blocks/basic/TextImage.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Data
import faqData from '../data/json-files/faqData.json'
// - FAQ Categories
const faqPricing = faqData.filter((faq) => faq.category === 'pricing')
const faqIntegrations = faqData.filter((faq) => faq.category === 'integrations')

// Content
import faqImage1 from '../assets/faq/faq-01.png'
// - SEO
const SEO = {
	title: 'Viroop | Get Your Questions Answered with a Smile',
	description:
		'Dive into the Viroop FAQ Funhouse to get answers to all your questions about pricing, integrations, features, and more. Discover how Viroop can make your work life more productive and enjoyable.'
}
// - Page Header
const header = {
	title: 'Get Answers to Your <strong>Viroop</strong> Questions.',
	text: 'Find answers to common questions about Viroop '
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
